<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PGA.Views.SplashScreen"
             BackgroundColor="White">

    <ContentPage.Content>
        <AbsoluteLayout>
            <!-- Logo Image -->
            <Image x:Name="LogoImage"
                   Source="logo.png"
                   AbsoluteLayout.LayoutFlags="PositionProportional"
                   AbsoluteLayout.LayoutBounds="0.5, 0.4, -1, -1"/>
            <!-- Welcome Text -->
            <Label Text="Punjab Grocers"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="#388E3C"
                   AbsoluteLayout.LayoutFlags="PositionProportional"
                   AbsoluteLayout.LayoutBounds="0.5, 0.6, -1, -1"
                   Opacity="0"
                   x:Name="WelcomeLabel"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
