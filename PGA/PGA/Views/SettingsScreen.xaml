<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PGA.Views.SettingsScreen">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="20">
        <Label Text="Settings" FontSize="24" FontAttributes="Bold" />
        <Button Text="Change Password" Clicked="OnChangePasswordClicked" />
        <Button Text="Logout" Clicked="OnLogoutClicked" />
    </StackLayout>
</ContentPage>
